<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox prefHeight="123.0" prefWidth="326.0" xmlns="http://javafx.com/javafx/8.0.121" xmlns:fx="http://javafx.com/fxml/1" fx:controller="edu.uwb.braingrid.workbench.provvisualizer.controller.AuthenticationController">
   <padding><Insets bottom="10.0" left="25.0" right="25.0" top="10.0" /></padding>
   <HBox prefHeight="70.0" prefWidth="295.0">
      <children>
         <VBox alignment="CENTER_RIGHT" prefHeight="200.0" prefWidth="100.0" spacing="2.0">
            <children>
               <Label text="Host Name :" />
      
               <Label text="User Name :">
                  <padding>
                     <Insets top="5.0" />
                  </padding></Label>
      
               <Label text="Password :">
                  <padding>
                     <Insets top="7.0" />
                  </padding></Label>
            </children>
            <padding>
               <Insets right="5.0" top="2.0" />
            </padding>
         </VBox>
         <VBox alignment="CENTER_LEFT" prefHeight="68.0" prefWidth="204.0">
            <children>
               <Label fx:id="hostnameLbl">
                  <VBox.margin>
                     <Insets bottom="5.0" top="5.0" />
                  </VBox.margin>
               </Label>
      
               <TextField fx:id="usernameTxtFd" />
      
               <PasswordField fx:id="passwordPwdFd" />
            </children>
         </VBox>
      </children>
   </HBox>
   <AnchorPane prefHeight="49.0" prefWidth="550.0">
      <children>
         <HBox alignment="TOP_RIGHT" prefHeight="46.0" prefWidth="130.0" AnchorPane.rightAnchor="0">
            <children>
               <Button fx:id="okBtn" mnemonicParsing="false" text="OK">
                  <HBox.margin>
                     <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                  </HBox.margin>
               </Button>
               <Button fx:id="cancelBtn" alignment="TOP_LEFT" mnemonicParsing="false" text="Cancel">
                  <HBox.margin>
                     <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                  </HBox.margin>
               </Button>
            </children>
         </HBox>
      </children>
   </AnchorPane>
</VBox>
